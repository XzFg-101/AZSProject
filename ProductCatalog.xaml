<Window x:Class="AZSProject.ProductCatalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AZSProject"
        mc:Ignorable="d"
        Title="Каталог" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*" />
            <RowDefinition Height="337*" />
            <RowDefinition Height="57*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Name="ProductTitle" Text="Топливо" FontSize="30" Grid.Row="0" HorizontalAlignment="Left" RenderTransformOrigin="0.485,0.483"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,40,-17,0" Width="Auto" Grid.RowSpan="2" >
            <StackPanel x:Name="ProductPanel" Width="563"/>
        </ScrollViewer>
        <Button Content="Назад" Grid.Row="2" Click="Back" HorizontalAlignment="Left" Margin="10,8,0,7" Width="285" />
        <Button Content="Обновить" Grid.Row="2" Click="Update" HorizontalAlignment="Left" Margin="304,8,0,7" Width="286" />
    </Grid>
</Window>
